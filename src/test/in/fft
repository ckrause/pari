default(realprecision,38);
w = rootsof1(2)
g = fft(w, x+1)
fftinv(w, g)

w = rootsof1(4)
g = fft(w, x^3+I*x+1)
fftinv(w, g)

W = conj(rootsof1(4))
g = fft(W, x^3+I*x+1)
fftinv(W, g)

N = 512; w = rootsof1(N); T = random(1000 * x^(N-1));
U = fft(w, T);
V = vector(N, i, subst(T, 'x, w[i]));
exponent(V - U)
round(Polrev(fftinv(w,U) / N)) == T

