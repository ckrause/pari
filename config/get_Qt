if test -z "$with_qt"; then
  with_qt=yes
fi
QTDIR=
case "$with_qt" in
yes)
   addlib=""
   case "$sizeof_long" in
     4) addlib="/usr/local/lib32 /lib32 /usr/lib32";;
     8) addlib="/usr/local/lib64 /lib64 /usr/lib64";;
   esac
   pth="$addlib /usr/local/lib /usr/local/share /usr/lib /lib /usr/share"
   QTDIR=`locatedir qt4/bin $pth`
   if test -n "$QTDIR"; then
     QTLIB="-lQtCore -lQtGui -lstdc++"
     which_graphic_lib=Qt4
   else
     QTDIR=`locatedir qt/bin $pth`
     if test -n "$QTDIR"; then
       QTLIB="-lQtCore -lQtGui -lstdc++"
       which_graphic_lib=Qt4
     fi
   fi;
   if test -n "$QTDIR"; then
     QTDIR=`dirname $QTDIR`
   fi;;
*) if test ! -d "$with_qt"; then
     echo "### Qt directory '$with_qt' not found"
   else
     QTDIR=$with_qt
     QTLIB="-lQtCore -lQtGui -lstdc++"
     which_graphic_lib=Qt4
   fi;;
esac
if test -n "$QTDIR"; then
  echo "Using Qt library, QTDIR = $QTDIR, QTLIB = $QTLIB"
else
  echo "### Qt not found. Building without Qt support"
fi
